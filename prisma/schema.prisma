generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Class {
  id   Int     @id @default(autoincrement())
  name String? @map("name")

  @@map("class")
}

model Area {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  sort      Int      @default(0)
  createdAt DateTime @default(now()) @map("create_time")
  updatedAt DateTime @updatedAt @map("update_time")

  projects Project[]
  modules  Module[]

  @@map("area")
}

model Project {
  id              Int       @id @default(autoincrement())
  projectName     String?   @map("project_name")
  projectDescribe String?   @map("project_describe") @db.Text
  createTime      DateTime? @map("create_time")
  updateTime      DateTime? @map("update_time")
  areaName        String?   @map("area_name") // Kept for legacy compatibility (Dual Write)
  sort            Int?
  classId         Int?      @map("class_id")

  // New Relation
  areaId Int?  @map("area_id")
  area   Area? @relation(fields: [areaId], references: [id])

  @@map("project")
}

model Module {
  id             Int       @id @default(autoincrement())
  moduleName     String?   @map("module_name")
  moduleUrl      String?   @map("module_url")
  typeName       String?   @map("type_name")
  projectId      Int?      @map("project_id")
  createTime     DateTime? @map("create_time")
  updateTime     DateTime? @map("update_time")
  moduleDescribe String?   @map("module_describe") @db.Text
  remark         String?   @db.Text
  areaName       String?   @map("area_name") // Kept for legacy compatibility (Dual Write)

  // New Relation
  areaId Int?  @map("area_id")
  area   Area? @relation(fields: [areaId], references: [id])

  @@map("module")
}

model Account {
  id          Int     @id @default(autoincrement())
  account     String?
  password    String?
  // 账号描述：用于保存“角色/归属/用途”等业务信息（例如：乡镇民政-马桥街道）
  accountInfo String? @map("account_info") @db.Text
  remark      String?
  moduleId    Int?    @map("module_id")

  @@map("account")
}

model NounName {
  id          Int       @id @default(autoincrement())
  name        String?
  aliasName   String?   @map("alias_name")
  description String?
  createTime  DateTime? @map("create_time")
  updateTime  DateTime? @map("update_time")
  operateUser String?   @map("operate_user")
  classId     Int?      @map("class_id")
  englishName String?   @map("english_name")
  remark      String?

  @@map("noun_name")
}

model ObjectInfo {
  id      Int       @id @default(autoincrement())
  objName String?   @map("obj_name")
  objKey  String?   @map("obj_key")
  remark  String?
  addTime DateTime? @map("add_time")

  @@map("object_info")
}

model ObjAttrDefine {
  id       Int       @id @default(autoincrement())
  objId    Int?      @map("obj_id")
  attrName String?   @map("attr_name")
  attrKey  String?   @map("attr_key")
  attrType String?   @map("attr_type")
  required Boolean?
  remark   String?
  addTime  DateTime? @map("add_time")

  @@map("obj_attr_define")
}

model Label {
  id         Int     @id @default(autoincrement())
  name       String?
  nounNameId Int?    @map("noun_name_id")

  @@map("label")
}

model SystemConfig {
  id          Int      @id @default(autoincrement())
  configKey   String   @unique @map("config_key")
  configValue String?  @map("config_value") @db.Text
  description String?
  updateTime  DateTime @updatedAt @map("update_time")

  @@map("system_config")
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  action      String
  module      String
  description String?
  userName    String?  @map("user_name")
  ipAddress   String?  @map("ip_address")
  status      Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("audit_log")
}

model ApifoxSyncLog {
  id          Int     @id @default(autoincrement())
  projectId   String  @map("project_id")
  projectName String? @map("project_name")
  status      String // "SUCCESS" | "FAILURE"

  // 接口统计
  endpointCreated Int @default(0) @map("endpoint_created")
  endpointUpdated Int @default(0) @map("endpoint_updated")
  endpointIgnored Int @default(0) @map("endpoint_ignored")

  // 数据模型统计
  schemaCreated Int @default(0) @map("schema_created")
  schemaUpdated Int @default(0) @map("schema_updated")

  errorMessage String? @map("error_message") @db.Text
  rawResponse  String? @map("raw_response") @db.LongText // 存储完整 JSON

  createdAt DateTime @default(now()) @map("created_at")

  @@map("apifox_sync_log")
}

model ApifoxSpecSnapshot {
  id        Int      @id @default(autoincrement())
  projectId String   @map("project_id")
  moduleKey String   @default("") @map("module_key")
  targetUrl String   @map("target_url")
  apiPrefix String   @default("") @map("api_prefix")
  specHash  String   @map("spec_hash")
  specJson  String   @map("spec_json") @db.LongText
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([projectId, moduleKey, targetUrl, apiPrefix], map: "uk_apifox_spec_snapshot_key")
  @@index([projectId, moduleKey, createdAt], map: "idx_apifox_spec_snapshot_project")
  @@map("apifox_spec_snapshot")
}
